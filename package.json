{
    "name": "@wicle/mutex",
    "version": "0.9.0",
    "description": "Async mutex and semaphore implementation for Node.js and browsers.",
    "keywords": [
        "mutex",
        "semaphore",
        "async",
        "promise",
        "await",
        "posix",
        "lock",
        "unlock",
        "post",
        "wait"
    ],
    "homepage": "https://github.com/shnam7/wicle-mutex#readme",
    "bugs": {
        "url": "https://github.com/shnam7/wicle-mutex/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/shnam7/wicle-mutex"
    },
    "license": "MIT",
    "author": {
        "name": "Robin Nam",
        "email": "shnam7@gmail.com"
    },
    "type": "module",
    "main": "./dist/index.cjs",
    "types": "./dist/index.d.ts",
    "exports": {
        "types": "./dist/index.d.ts",
        "require": "./dist/index.cjs",
        "import": "./dist/index.js"
    },
    "files": [
        "dist/**"
    ],
    "sideEffects": false,
    "engines": {
        "node": ">=18"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "scripts": {
        "build": "tsdown src/index.ts --format cjs,esm --dts",
        "dev": "pnpm run build --watch",
        "lint": "tsc --noEmit && xo",
        "test": "vitest run --coverage --coverage.include=src",
        "test:watch": "vitest watch --coverage --coverage.include=src",
        "clean": "rimraf ./dist ./coverage",
        "rebuild": "run-s clean build",
        "prepare-to-commit": "run-s rebuild lint test",
        "npm-dry-run": "npm publish --dry-run"
    },
    "devDependencies": {
        "@changesets/cli": "^2.29.6",
        "@types/node": "24.3.0",
        "@vitest/coverage-v8": "^3.2.4",
        "npm-run-all2": "^8.0.4",
        "rimraf": "^6.0.1",
        "tsdown": "^0.14.2",
        "typescript": "^5.9.2",
        "vitest": "^3.2.4",
        "xo": "^1.2.2"
    },
    "packageManager": "pnpm@10.15.0"
}
